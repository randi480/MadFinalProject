<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

       <ImageView
           android:id="@+id/t_shirt"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:src="@drawable/ltshirt"
           />
        <ImageView
            android:id="@+id/sports_t_shirt"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/jeans"
            />
        <ImageView
            android:id="@+id/femail_dresses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/female_dresses"
            />
        <ImageView
            android:id="@+id/swether"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tpsl"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/jwels"
            />
        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/neckless"
            />
        <ImageView
            android:id="@+id/hats_caps"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hats"
            />
        <ImageView
            android:id="@+id/shoes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/shoe"
            android:layout_marginStart="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/headphones_handsfree"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bag"
            />
        <ImageView
            android:id="@+id/laptop_pc"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/decos"
            />
        <ImageView
            android:id="@+id/watches"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/wathes"
            />
        <ImageView
            android:id="@+id/mobilephones"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/other"
            android:layout_marginStart="16dp"
            />

    </LinearLayout>


    <ImageView
        android:id="@+id/add_seller"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/other"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/linear3_category_layout"
        android:layout_marginStart="16dp"
        />


<!--    <Button-->
<!--        android:id="@+id/manage_Products"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_above="@+id/check_Orders_btn"-->
